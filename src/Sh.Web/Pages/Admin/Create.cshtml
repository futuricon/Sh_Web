@page
@model Sh.Web.Pages.Admin.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<!--================ Start Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <h2>@ViewData["Title"]</h2>
                <div class="page_link">
                    <a asp-area="" asp-page="/Index">Home</a>
                    <a asp-page="/Admin/Index">Admin</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================ End Banner Area =================-->
<!--================ Start Create Area =================-->
<section class="about_area section_gap">
    <div class="container">
        <div class="row justify-content-start align-items-center">
            <div class="col-lg-6 mx-auto">
                <div class="main_title text-center">
                    <p class="top_text">Create a new account <span></span></p>
                    <br />
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Username"></label>
                            <input asp-for="Input.Username" class="form-control" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="primary_btn button-contactForm mt-4">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================ End Create Area =================-->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}