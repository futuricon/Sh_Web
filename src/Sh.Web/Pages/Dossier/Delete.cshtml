@page "{id}"
@model Sh.Web.Pages.Dossier.DeleteModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Create";
}

@section CSS {
    <link rel="stylesheet" href="~/css/blog_style.css" />
}

<!--================ Start Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <h2>@Localizer["Delete this Testimonial"]"</h2>
                <div class="page_link">
                    <a asp-area="" asp-page="/Index">@Localizer["Home"]</a>
                    <a asp-page="/About">@Localizer["About"]</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================ End Banner Area =================-->
<!--================Testimonial Area =================-->
<section class="pb-lg-80 pb-40 section-margin">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0 mx-auto">
                <h2>@Localizer["Are you sure you want to delete this Testimonial?"]</h2>
                <dl class="row mt-50">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Dossier.CoverPhotoPath)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dossier.CoverPhotoPath)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Dossier.FirstName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dossier.FirstName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Dossier.FirstNameRu)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dossier.FirstNameRu)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Dossier.FirstNameUz)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dossier.FirstNameUz)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Dossier.Position)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dossier.Position)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Dossier.PositionRu)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dossier.PositionRu)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Dossier.PositionUz)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dossier.PositionUz)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Dossier.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dossier.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Dossier.DescriptionRu)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dossier.DescriptionRu)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Dossier.DescriptionUz)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dossier.DescriptionUz)
                    </dd>
                </dl>

                <form method="post">
                    <input type="hidden" asp-for="Dossier.Id" />
                    <button type="submit" class="primary_btn button-contactForm">@Localizer["Delete"]</button>
                </form>
            </div>
        </div>
    </div>
</section>
<!--================Testimonial Area =================-->