@page
@model Sh.Web.Pages.Gallery.DeleteModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Delete";
}

<!--================ Start Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <h2>@Localizer["Dlete this Article"]"</h2>
                <div class="page_link">
                    <a asp-area="" asp-page="/Index">@Localizer["Home"]</a>
                    <a asp-page="/Gallery/List">@Localizer["Gallery"]</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================ End Banner Area =================-->
<!--================Delete Area =================-->
<section class="section-margin">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0 mx-auto">
                <h2>@Localizer["Are you sure you want to delete this media?"]</h2>
                <dl class="row mt-50">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Media.MediaType)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Media.MediaType)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Media.MediaPath)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Media.MediaPath)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Media.PostedDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Media.PostedDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Media.Categories)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Categories)
                    </dd>
                </dl>

                <form method="post">
                    <input type="hidden" asp-for="Media.Id" />
                    <button type="submit" class="primary_btn">@Localizer["Delete"]</button>
                </form>
            </div>
        </div>
    </div>
</section>
<!--================Delete Area =================-->
