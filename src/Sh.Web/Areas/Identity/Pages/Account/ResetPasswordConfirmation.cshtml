@page
@model Sh.Web.Areas.Identity.Pages.Account.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<section class="home_banner_area">
    <div class="banner_inner">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-lg-5">
                    <div class="banner_content mt-lg-200">
                        <h1>@ViewData["Title"]</h1>
                        <hr />
                        <h4>Your password has been reset</h4>
                        <br />
                        <div class="button">
                            <a asp-page="./Login" class="btn">Please click here to log in</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
